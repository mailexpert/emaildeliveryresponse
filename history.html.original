<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Deliverability History</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1600px;
            margin: 0 auto;
            background: white;
            border-radius: 16px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            overflow: hidden;
        }

        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 40px;
        }

        .header h1 {
            font-size: 2.5em;
            margin-bottom: 15px;
            font-weight: 700;
        }

        .email-badge {
            background: rgba(255, 255, 255, 0.15);
            padding: 18px 24px;
            border-radius: 10px;
            margin-top: 15px;
            backdrop-filter: blur(10px);
        }

        .email-badge p {
            margin: 6px 0;
            font-size: 15px;
        }

        .email-badge strong {
            font-weight: 600;
            margin-right: 8px;
        }

        .content {
            padding: 50px;
        }

        .back-button {
            display: inline-block;
            padding: 12px 24px;
            background: #667eea;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            margin-bottom: 30px;
            transition: all 0.2s;
            font-weight: 600;
        }

        .back-button:hover {
            background: #5568d3;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        }

        .loading-spinner {
            text-align: center;
            padding: 60px;
        }

        .spinner {
            border: 5px solid #f3f3f3;
            border-top: 5px solid #667eea;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            animation: spin 1s linear infinite;
            margin: 0 auto 25px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .alert {
            padding: 20px 24px;
            border-radius: 10px;
            margin-bottom: 25px;
        }

        .alert-error {
            background: #fee;
            color: #c33;
            border-left: 5px solid #c33;
        }

        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }

        .stat-box {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
            transition: transform 0.2s;
        }

        .stat-box:hover {
            transform: translateY(-4px);
        }

        .stat-box h3 {
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 1.2px;
            margin-bottom: 12px;
            opacity: 0.9;
            font-weight: 600;
        }

        .stat-box .value {
            font-size: 38px;
            font-weight: 700;
            line-height: 1;
        }

        .section-header {
            margin-bottom: 25px;
        }

        .section-header h2 {
            color: #333;
            font-size: 1.9em;
            font-weight: 700;
        }

        .table-wrapper {
            overflow-x: auto;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
        }

        thead {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        th {
            padding: 18px 16px;
            text-align: left;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 13px;
            letter-spacing: 0.8px;
        }

        td {
            padding: 18px 16px;
            border-bottom: 1px solid #f0f0f0;
            vertical-align: top;
        }

        tbody tr {
            transition: background-color 0.2s;
        }

        tbody tr:hover {
            background-color: #f8f9ff;
        }

        tbody tr:last-child td {
            border-bottom: none;
        }

        .badge {
            display: inline-block;
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .badge-success {
            background: #d4edda;
            color: #155724;
        }

        .badge-danger {
            background: #f8d7da;
            color: #721c24;
        }

        .badge-warning {
            background: #fff3cd;
            color: #856404;
        }

        .badge-verified {
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 11px;
            font-weight: 700;
        }

        .badge-verified-yes {
            background: #d4edda;
            color: #155724;
        }

        .badge-verified-no {
            background: #f8d7da;
            color: #721c24;
        }

        .code {
            font-family: 'Courier New', Consolas, monospace;
            background: #f5f5f5;
            padding: 4px 10px;
            border-radius: 6px;
            font-size: 13px;
            font-weight: 600;
        }

        .bounce-info {
            font-size: 13px;
            line-height: 1.6;
        }

        .bounce-item {
            margin-bottom: 10px;
        }

        .bounce-item:last-child {
            margin-bottom: 0;
        }

        .bounce-label {
            font-weight: 600;
            display: block;
            margin-bottom: 3px;
        }

        .bounce-date {
            color: #666;
            display: block;
            margin-bottom: 2px;
        }

        .bounce-reason {
            color: #888;
            font-size: 12px;
        }

        .empty-state {
            text-align: center;
            padding: 80px 30px;
            color: #999;
        }

        .empty-state-icon {
            font-size: 72px;
            margin-bottom: 20px;
        }

        .empty-state h3 {
            font-size: 22px;
            margin-bottom: 12px;
            color: #666;
        }

        @media (max-width: 768px) {
            .header h1 {
                font-size: 1.8em;
            }

            .content {
                padding: 30px 20px;
            }

            .stats-container {
                grid-template-columns: 1fr;
            }

            table {
                font-size: 13px;
            }

            th, td {
                padding: 12px 10px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üìä Email Deliverability History</h1>
            <div class="email-badge">
                <p><strong>Email Address:</strong> <span id="emailDisplay">Loading...</span></p>
            </div>
        </div>

        <div class="content">
            <a href="javascript:history.back()" class="back-button">‚Üê Back to Search</a>

            <div id="loadingSpinner" class="loading-spinner">
                <div class="spinner"></div>
                <p style="color: #667eea; font-size: 18px; font-weight: 600;">Loading historical data...</p>
            </div>

            <div id="errorAlert" class="alert alert-error" style="display: none;"></div>

            <div id="resultsSection" style="display: none;">
                <div class="stats-container">
                    <div class="stat-box">
                        <h3>Total Records</h3>
                        <div class="value" id="statTotal">0</div>
                    </div>
                    <div class="stat-box">
                        <h3>Delivered</h3>
                        <div class="value" id="statDelivered">0</div>
                    </div>
                    <div class="stat-box">
                        <h3>Total Bounces</h3>
                        <div class="value" id="statBounces">0</div>
                    </div>
                    <div class="stat-box">
                        <h3>Last Checked</h3>
                        <div class="value" id="statLastChecked" style="font-size: 20px;">N/A</div>
                    </div>
                </div>

                <div class="section-header">
                    <h2>Complete History</h2>
                </div>

                <div class="table-wrapper">
                    <table>
                        <thead>
                            <tr>
                                <th>Status</th>
                                <th>SMTP Code</th>
                                <th>SMTP Message</th>
                                <th>Send Date</th>
                                <th>Delivered Date</th>
                                <th>Bounce Information</th>
                                <th>Verified</th>
                            </tr>
                        </thead>
                        <tbody id="historyTable"></tbody>
                    </table>
                </div>
            </div>

            <div id="emptyState" class="empty-state" style="display: none;">
                <div class="empty-state-icon">üì≠</div>
                <h3>No History Available</h3>
                <p>There are no historical records for this email address.</p>
            </div>
        </div>
    </div>

    <script>
        const emailDisplay = document.getElementById('emailDisplay');
        const loadingSpinner = document.getElementById('loadingSpinner');
        const errorAlert = document.getElementById('errorAlert');
        const resultsSection = document.getElementById('resultsSection');
        const emptyState = document.getElementById('emptyState');
        const historyTable = document.getElementById('historyTable');

        window.addEventListener('load', loadHistory);

        async function loadHistory() {
            const params = new URLSearchParams(window.location.search);
            const email = params.get('email');

            if (!email) {
                showError('No email address provided in URL');
                return;
            }

            emailDisplay.textContent = email;

            try {
                emailHash = await hashEmail(email);
                const response = await fetch(`https://emaildelivery.space/me/history/${emailHash}`, {
                     method: 'GET',                                                                              headers: {                                                                                         'Content-Type': 'application/json',                                                         'Authorization': 'Bearer 5hm1r32tgc8wggc8o4wow4gkwgwowwowo4sk4wkcc'
                    }
                });

                if (!response.ok) {
                    if (response.status === 404) {
                        showEmptyState();
                        return;
                    }
                    throw new Error(`API Error: ${response.status}`);
                }

                const data = await response.json();
                displayHistory(data);
            } catch (error) {
                showError('Failed to load history: ' + error.message);
            } finally {
                hideLoading();
            }
        }

        async function hashEmail(email) {
            const msgBuffer = new TextEncoder().encode(email.toLowerCase());
            const hashBuffer = await crypto.subtle.digest('SHA-256', msgBuffer);
            const hashArray = Array.from(new Uint8Array(hashBuffer));
            return hashArray.map(b => b.toString(16).padStart(2, '0')).join('');
        }

        function displayHistory(data) {
            // Handle different response formats
            let records = [];
            if (Array.isArray(data)) {
                records = data;
            } else if (data && typeof data === 'object') {
                // If data is an object, try to find an array property
                if (data.results && Array.isArray(data.results)) {
                    records = data.results;
                } else if (data.data && Array.isArray(data.data)) {
                    records = data.data;
                } else if (data.history && Array.isArray(data.history)) {
                    records = data.history;
                } else {
                    // Single record as object
                    records = [data];
                }
            }

            if (!records || records.length === 0) {
                showEmptyState();
                return;
            }

            updateStatistics(records);
            renderHistoryTable(records);
            showResults();
        }

        function updateStatistics(data) {
            const total = data.length;
            const delivered = data.filter(r => 
                r.status && r.status.toLowerCase().includes('deliver')
            ).length;
            const bounces = data.filter(r =>
                (r.soft_bounce_date && r.soft_bounce_date !== 'None') ||
                (r.hard_bounce_date && r.hard_bounce_date !== 'None')
            ).length;
            const lastChecked = data.length > 0 
                ? formatDate(data[0].send_date || data[0].delivered_date)
                : 'N/A';

            document.getElementById('statTotal').textContent = total;
            document.getElementById('statDelivered').textContent = delivered;
            document.getElementById('statBounces').textContent = bounces;
            document.getElementById('statLastChecked').textContent = lastChecked;
        }

        function renderHistoryTable(data) {
            historyTable.innerHTML = '';

            data.forEach(record => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${getStatusBadge(record.status)}</td>
                    <td><span class="code">${record.smtp_code || 'N/A'}</span></td>
                    <td>${escapeHtml(record.smtp_message || 'No message')}</td>
                    <td>${formatDateTime(record.send_date)}</td>
                    <td>${formatDateTime(record.delivered_date)}</td>
                    <td>${getBounceInfo(record)}</td>
                    <td>${getVerifiedBadge(record.source_verified)}</td>
                `;
                historyTable.appendChild(row);
            });
        }

        function getStatusBadge(status) {
            if (!status) return '<span class="badge badge-warning">Unknown</span>';
            
            const statusLower = status.toLowerCase();
            let badgeClass = 'badge-warning';
            
            if (statusLower.includes('deliver')) {
                badgeClass = 'badge-success';
            } else if (statusLower.includes('bounce') || statusLower.includes('fail')) {
                badgeClass = 'badge-danger';
            }
            
            return `<span class="badge ${badgeClass}">${escapeHtml(status)}</span>`;
        }

        function getVerifiedBadge(verified) {
            const isVerified = verified === 1;
            const badgeClass = isVerified ? 'badge-verified-yes' : 'badge-verified-no';
            const text = isVerified ? 'Verified' : 'Not Verified';
            return `<span class="badge-verified ${badgeClass}">${text}</span>`;
        }

        function getBounceInfo(record) {
            const bounces = [];

            if (record.soft_bounce_date && record.soft_bounce_date !== 'None') {
                bounces.push(`
                    <div class="bounce-item">
                        <span class="bounce-label" style="color: #856404;">‚ö†Ô∏è Soft Bounce</span>
                        <span class="bounce-date">${formatDateTime(record.soft_bounce_date)}</span>
                        <span class="bounce-reason">${escapeHtml(record.soft_bounce_reason || 'No reason provided')}</span>
                    </div>
                `);
            }

            if (record.hard_bounce_date && record.hard_bounce_date !== 'None') {
                bounces.push(`
                    <div class="bounce-item">
                        <span class="bounce-label" style="color: #721c24;">‚ùå Hard Bounce</span>
                        <span class="bounce-date">${formatDateTime(record.hard_bounce_date)}</span>
                        <span class="bounce-reason">${escapeHtml(record.hard_bounce_reason || 'No reason provided')}</span>
                    </div>
                `);
            }

            if (bounces.length === 0) {
                return '<span style="color: #999;">No bounces</span>';
            }

            return `<div class="bounce-info">${bounces.join('')}</div>`;
        }

        function formatDateTime(dateStr) {
            if (!dateStr || dateStr === 'None') return 'N/A';
            try {
                const date = new Date(dateStr);
                return date.toLocaleString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });
            } catch {
                return dateStr;
            }
        }

        function formatDate(dateStr) {
            if (!dateStr || dateStr === 'None') return 'N/A';
            try {
                const date = new Date(dateStr);
                return date.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                });
            } catch {
                return dateStr;
            }
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function showError(message) {
            errorAlert.textContent = message;
            errorAlert.style.display = 'block';
            hideLoading();
        }

        function hideLoading() {
            loadingSpinner.style.display = 'none';
        }

        function showResults() {
            resultsSection.style.display = 'block';
        }

        function showEmptyState() {
            emptyState.style.display = 'block';
            hideLoading();
        }
    </script>
</body>
</html>
